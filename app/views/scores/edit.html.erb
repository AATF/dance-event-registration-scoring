<% @title = "Edit Dancer Score" %>
<% @header = "Edit Dancer Score of #{@dancer.name} for #{@score.user.name}" %>

<h2>Dance Name: <%= @dancer.dance_name %></h2>

<h3>Total Score: <%= @score.total %></h3>

<%= form_for @score, html: { class: "form-control" } do |f| %>
  <%= f.label :theme, "Theme" %>
  <%= f.text_field :theme, class: "form-control", autofocus: true %>

  <%= f.label :presentation, "Presentation" %>
  <%= f.text_field :presentation, class: "form-control" %>

  <%= f.label :technique, "Technique" %>
  <%= f.text_field :technique, class: "form-control" %>

  <%= f.label :choreography, "Choreography" %>
  <%= f.text_field :choreography, class: "form-control" %>

  <%= f.label :costume, "Costume" %>
  <%= f.text_field :costume, class: "form-control" %>

  <%= f.label :music, "Music" %>
  <%= f.text_field :music, class: "form-control" %>
  <br />

  <%= f.label :violation, "Violation" %>
  <%= f.text_field :violation, class: "form-control" %>

  <%= f.button "Submit", class: "btn btn-primary" %>
<% end %>
