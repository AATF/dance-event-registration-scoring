<% @title = "Admin" %>
<% @header = "Admin" %>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Edit Setting</th>
  </tr>
  <tr>
    <% @settings.each do |setting| %>
      <td><%= setting.var %></td>
      <td><%= setting.value %></td>
      <td><%= link_to "Edit Setting", edit_admin_setting_path(setting.id) %></td>
    <% end %>
  </tr>
</table>